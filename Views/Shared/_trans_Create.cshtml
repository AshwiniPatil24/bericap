@model FreightApp.Models.TRANSPORTER_M

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("trans_Create_save","Freight",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<table class="table">
    <tr>
       <td>
           Vendor Code:
        </td>
      <td>
            @Html.EditorFor(model => model.VEN_CODE)
            @Html.ValidationMessageFor(model => model.VEN_CODE)
        </td>
        </tr>
    <tr>
       <td>
           Vendor Name:
        </td>
      <td>
            @Html.EditorFor(model => model.VEN_NAME)
            @Html.ValidationMessageFor(model => model.VEN_NAME)
        </td>
        </tr>
    <tr>
     <td>
Vehicle Type:
        </td>
           @{
   var listItems = new List<SelectListItem>();
   listItems.Add(new SelectListItem { Text = "Full Load", Value = "full" });
   listItems.Add(new SelectListItem { Text = "Part Load", Value = "part" });
   listItems.Add(new SelectListItem { Text = "Export", Value = "export" });
 
}       
                    
         <td>
             @Html.DropDownListFor(model => model.VEN_TYPE, listItems)
                                     
        </td>
</tr>

   <tr>
        <td>
          Address:
        </td>
      <td>
            @Html.EditorFor(model => model.VEN_ADDR)
            @Html.ValidationMessageFor(model => model.VEN_ADDR)
        </td>
       </tr>

    <tr>
       <td>
           Contact Person:
        </td>
      <td>
            @Html.EditorFor(model => model.CONTACT_PER)
            @Html.ValidationMessageFor(model => model.CONTACT_PER)
        </td>
        </tr>

    <tr>
       <td>
        Contact No.
        </td>
      <td>
            @Html.EditorFor(model => model.CONTACT)
            @Html.ValidationMessageFor(model => model.CONTACT)
        </td>
</tr>

    <tr>
       <td>
           Email ID:
        </td>
      <td>
            @Html.EditorFor(model => model.EMAIL)
            @Html.ValidationMessageFor(model => model.EMAIL)
        </td>
        </tr>
        <tr>
            <td><button type="submit" value="Add" class="btn btn-primary ">Add</button></td>
        </tr>
</table>
}


<style>
  .table {
     background-color: #d7f1ee;
}
    </style>