@model FreightApp.Models.KM_M

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("km_Create_save","Freight",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <table class="table table-bordered table-hover" >
      <tr>
             <td>
           State:
       </td>


       <td>
            @Html.DropDownList("state", String.Empty)
            @Html.ValidationMessageFor(model => model.STATE)
       </td>
</tr>
        
<tr>
       <td>
           Zone:
       </td>
       <td>
            @Html.DropDownList("zone", String.Empty)
            @Html.ValidationMessageFor(model => model.ZONE)
       </td>
    </tr>
<tr>
       <td>
          Destination:
       </td>
        <td>
            @Html.EditorFor(model => model.DESTINATION)
            @Html.ValidationMessageFor(model => model.DESTINATION)
       </td>
    </tr>
     <tr>
              <td>
          Kilometers:
       </td>
        <td>
            @Html.TextBoxFor(model => model.KM, new {@type = "number"})
            @Html.ValidationMessageFor(model => model.KM)
       </td>
</tr>
            <tr>
       <td>
           Transit Time:
       </td>
        <td>
            @Html.TextBoxFor(model => model.TRANSIT_TM, new {@type = "number"})
            @Html.ValidationMessageFor(model => model.TRANSIT_TM)
       </td>
                </tr>
      
  

 <tr>
     <td colspan="2"> <button type="submit" value="Add" class="btn btn-primary  ">Add</button></td>      
        </tr>
    
  </table>
}





<style>
        input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 

    }

  .table {
     background-color: #d7f1ee;
}
    </style>