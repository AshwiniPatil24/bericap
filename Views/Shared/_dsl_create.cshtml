        </td>
        </tr>
    
    <tr>
     <td>
           Price:
        </td>
     <td>
            @Html.EditorFor(model => model.PRICE_D, new {@type = "number", @required  = "required"})
            @Html.ValidationMessageFor(model => model.PRICE_D)
        </td>
</tr>   
       <tr>
           <td><button type="submit" value="Add" class="btn btn-primary ">Add</button></td> 
