    @Html.ValidationSummary(true)

<table class="table">
    <tr>
        <td>
            Date:
        </td>
     <td>
            @Html.TextBoxFor(model => model.MONTYRDD,new { @class="date-picker",id="mmmyy1",placeholder="dd/mm/yyyy", @required  = "required"})
